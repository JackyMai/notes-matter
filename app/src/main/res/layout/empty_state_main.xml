<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/empty_state_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginTop="150dp"
        app:srcCompat="@drawable/empty_bell"
        android:id="@+id/empty_state_imageVIew"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="@string/empty_state_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:id="@+id/empty_state_title"
        android:gravity="center"
        android:layout_below="@+id/empty_state_imageVIew"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/empty_state_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/empty_state_desc"
        android:layout_below="@+id/empty_state_title"
        android:layout_alignParentStart="true" />

</RelativeLayout>