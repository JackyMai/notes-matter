    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_history"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.slackti.notesmatter.ui.HistoryActivity">

    <include layout="@layout/empty_state_history"
        android:visibility="invisible" />

    <include layout="@layout/content_main"
        android:layout_above="@+id/history_action_bar"
        android:layout_height="match_parent"
        android:layout_width="match_parent" />

    <include layout="@layout/bar_action_history"
        android:id="@+id/history_action_bar" />

</RelativeLayout>
